/* Mobile first queries */
@import 'reset'
@import 'fontface'

$black = #000
$white = #fff
$off-white = #f1f2f2
$clear-white = rgba(255,255,255,.75)
$dark-grey = #333333
$lgt-grey = #444444
$red = #FF4232
$orange = #FF5800
$yellow = #FF9B00
$green = #00C47D
$blue = #0088C6
$violet = #CB00C0

//Futura-Heavy          700
//Futura-Book           400

a,
a:link,
a:visited,
a:hover,
a:active
  color inherit
  text-decoration none

h4,h5,h6,p,ol,ul
  line-height 1.3

p
  a,
  a:link,
  a:visited,
  a:hover,
  a:active
    color inherit
    text-decoration underline

img
  max-width 100%

.red
  color $red

.orange
  color $orange

.yellow
  color $yellow

.green
  color $green

.blue
  color $blue

.violet
  color $violet

.red-back
  color $white
  background-color $red
  &:before
    background-color $red

.orange-back
  color $white
  background-color $orange
  &:before
    background-color $orange

.yellow-back
  color $white
  background-color $yellow
  &:before
    background-color $yellow

.green-back
  color $white
  background-color $green
  &:before
    background-color $green

.blue-back
  color $white
  background-color $blue
  &:before
    background-color $blue

.violet-back
  color $white
  background-color $violet
  &:before
    background-color $violet

.italic
  font-style italic

.strike-through
  text-decoration line-through

//remove this section before live production
.screen-resolution
  display block
  position fixed
  bottom 20px
  right 20px
  color $white
//end section to remove

html, body
  margin 0 auto
  padding 0
  width 100%
  height 100%
  font-size 13px
  letter-spacing -.5px
  font-weight 400
  font-family "open-sans", 'Open Sans', sans-serif
  color $black

loading
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  opacity 1
  background $clear-white
  z-index 9999
  &.ng-enter, &.ng-leave
    transition all 0.5s ease
  &.ng-enter, &.ng-leave.ng-leave-active
    opacity 0
  img
    position absolute
    top 50%
    margin-top -50px
    left 50%
    margin-left -50px
    width 100px
    height auto


//LISTS SCREEN

.profile-pic-container
  width 50px
  border-radius 100%
  overflow hidden


@import 'media-queries'
