/* Mobile first queries */
@import 'reset'
@import 'fontface'

$black = #000
$white = #fff
$off-white = #f1f2f2
$clear-white = rgba(255,255,255,.75)
$dark-grey = #333333
$lgt-grey = #444444
$lgt-lgt-grey = #b7b7b7
$red = #FF4232
$orange = #FF5800
$yellow = #FF9B00
$green = #00C47D
$blue = #0088C6
$violet = #CB00C0

//Futura-Heavy          700
//Futura-Book           400

a,
a:link,
a:visited,
a:hover,
a:active
  color inherit
  text-decoration none

h4,h5,h6,p,ol,ul
  line-height 1.3

h1
  font-size 200%
  font-weight 400

p
  a,
  a:link,
  a:visited,
  a:hover,
  a:active
    color inherit
    text-decoration underline

img
  max-width 100%

.red
  color $red

.orange
  color $orange

.yellow
  color $yellow

.green
  color $green

.blue
  color $blue

.violet
  color $violet

.red-back
  color $white
  background-color $red
  &:before
    background-color $red

.orange-back
  color $white
  background-color $orange
  &:before
    background-color $orange

.yellow-back
  color $white
  background-color $yellow
  &:before
    background-color $yellow

.green-back
  color $white
  background-color $green
  &:before
    background-color $green

.blue-back
  color $white
  background-color $blue
  &:before
    background-color $blue

.violet-back
  color $white
  background-color $violet
  &:before
    background-color $violet

.italic
  font-style italic

.strike-through
  text-decoration line-through

//remove this section before live production
.screen-resolution
  display block
  position fixed
  bottom 20px
  right 20px
  color $white
//end section to remove

html
  background-image url('../images/misty-mountains.jpg')
  background-position center
  background-size cover

html, body
  margin 0 auto
  padding 0
  width 100%
  height 100%
  font-size 16px
  letter-spacing -.5px
  font-weight 400
  font-family 'Lato', sans-serif
  color $white

body
  background-color transparent

loading
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  opacity 1
  background $clear-white
  z-index 9999
  &.ng-enter, &.ng-leave
    transition all 0.5s ease
  &.ng-enter, &.ng-leave.ng-leave-active
    opacity 0
  img
    position absolute
    top 50%
    margin-top -50px
    left 50%
    margin-left -50px
    width 100px
    height auto

.background
  position absolute
  top 0
  left 0
  height 100vh
  width 100vw
  background-image url('../images/misty-mountains.jpg')
  background-position center
  background-size cover

.container-fluid
  padding 0

.no-padding
  padding 0

.no-margin
  margin 0

//LOGIN SCREEN

.login-title
  margin-top 15px
  padding-bottom 20px
  text-align center

.login-form
  font-weight 400
  input
    padding 20px
    font-size 100%

::-webkit-input-placeholder, :-moz-placeholder, ::-moz-placeholder, :-ms-input-placeholder
  color $lgt-lgt-grey
  font-weight: 700


.email-input
  text-transform lowercase
  border none
  border-bottom solid 1px $lgt-lgt-grey
  border-top-left-radius 5px
  border-top-right-radius 5px
  border-bottom-left-radius 0
  border-bottom-right-radius 0

.password-input
  margin-bottom 20px
  border none
  border-top solid 1px $lgt-lgt-grey
  border-top-left-radius 0
  border-top-right-radius 0
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px

.signin-btn
  padding 10px
  color $white
  font-size 100%
  background $blue
  border $blue
  border-radius 5px

.signin-btn
  color #fff
  background-color $blue
  border-color $blue

.signin-btn:focus,
.signin-btn.focus
  color $blue
  background-color $white
  border-color $blue

.signin-btn:hover
  color $blue
  background-color $white
  border-color $blue

.signin-btn:active,
.signin-btn.active,
.open > .dropdown-toggle.signin-btn
  color $blue
  background-color $white
  border-color $blue

.signin-btn:active:hover,
.signin-btn.active:hover,
.open > .dropdown-toggle.signin-btn:hover,
.signin-btn:active:focus,
.signin-btn.active:focus,
.open > .dropdown-toggle.signin-btn:focus,
.signin-btn:active.focus,
.signin-btn.active.focus,
.open > .dropdown-toggle.signin-btn.focus
  color $blue
  background-color $white
  border-color $blue



.btn-link
  margin 5px 0 0
  padding 10px 5px
  color $white
  font-size 75%
  font-weight 300

.remto-link
  float right

.login-alert
  margin-top 5px
  z-index 9999

.white-hand-container
  position absolute
  margin 0 auto
  bottom 0
  text-align center
  img
    margin-left -10px
    width 35%


//LISTS SCREEN

.profile-pic-container
  width 50px
  border-radius 100%
  overflow hidden


input[type=date]::-webkit-inner-spin-button, input[type=date]::-webkit-clear-button
  display none
  -webkit-appearance none
  appearance none

select
  margin 50px
  border 1px solid #111
  background transparent
  width 150px
  padding 5px 35px 5px 5px
  font-size 16px
  border 1px solid #ccc
  height 34px
  -webkit-appearance none
  -moz-appearance none
  appearance none
  //background url(http://www.stackoverflow.com/favicon.ico) 96% / 15% no-repeat #eee
/*target Internet Explorer 9 and Internet Explorer 10:*/


@media screen and (min-width: 0\0)

  select
    background none
    padding 5px


@import 'media-queries'
